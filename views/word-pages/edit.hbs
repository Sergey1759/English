<link rel='stylesheet' href='/stylesheets/word-pages/edit.css' />
<link rel='stylesheet' href='/stylesheets/word-pages/media-edit.css' />


{{>navigation}}

<div class="container">
    <h1 class="text-center text-4xl font-bold text-gray-900 dark:text-white uppercase">{{word.word}}</h1>
    
    <h1 class="block mb-2 text-2xl font-medium text-gray-900 dark:text-white">Choose image</h1>
    <div class="image-container grid grid-cols-6 gap-3">
        {{#each word.images}}
            <div class="choose-image " style="background-image: url({{this}});"></div>
        {{/each}}
    </div>

    <label for="countries" class="block mb-2 text-2xl font-medium text-gray-900 dark:text-white">Select the best meaning</label>
    <select id="countries" class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500">
        {{#each word.meanings}}
            <option value="{{this}}">{{this}}</option>
        {{/each}}
    </select>

    <h1 class="block mb-2 text-2xl font-medium text-gray-900 dark:text-white">Choose meaning</h1>
    <form action="">
        {{#each word.examples}}
            <div class="flex my-radio-button">
                <div class="flex items-center ">
                    <input id="{{@index}}" data-from="{{this.from}}" data-to="{{this.to}}"name="example" aria-describedby="helper-radio-text" type="radio" value="" class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600">
                </div>
                <div class="ml-2 text-lg">
                    <label for="{{@index}}" class="font-medium text-gray-900 dark:text-gray-300" >{{this.from}}
                    <p id="helper-radio-text" class="text-base font-normal text-gray-500 dark:text-gray-300">{{this.to}}</p>
                    </label>
                </div>
            </div>
        {{/each}}
    </form>
    <button type="button" id="save" class="grid my-10 w-full text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5  dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">Save</button>
</div>

<script type="application/javascript">
    window.onload = () => {
        window._id = '{{{word.id}}}';
        window.data = {{{word.current}}}

        const script = document.createElement('script');
        script.src = '/javascripts/word-pages/edit.js';
        script.async = true;

        script.onload = () => console.log('Script loaded successfuly');
        script.onerror = () => console.log('Error occurred while loading script');

        document.body.appendChild(script);
    };
</script>